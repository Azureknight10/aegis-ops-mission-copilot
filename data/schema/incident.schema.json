{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AEGIS-OPS Incident",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "system_id": { "type": "string" },
    "subsystem": { "type": "string" },
    "environment": { "type": "string", "enum": ["LAB", "FLIGHT_LINE", "FORWARD_SITE"] },
    "phase": { "type": "string", "enum": ["PRE_MISSION", "EXECUTION", "POST_MISSION"] },
    "severity": { "type": "string", "enum": ["P1", "P2", "P3"] },
    "summary": { "type": "string" },
    "symptoms": { "type": "string" },
    "root_cause": { "type": "string" },
    "corrective_action": { "type": "string" }
  },
  "required": ["id", "system_id", "environment", "phase", "severity", "summary"]
}
